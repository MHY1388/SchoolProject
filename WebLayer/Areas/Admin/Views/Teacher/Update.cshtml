@model UpdateTeacherModel

@{
}

<form method="post" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    @Html.EditorFor(a => a.Name)
    @Html.EditorFor(a => a.Doc)
    @Html.EditorFor(a => a.Description)
    @Html.EditorFor(a => a.PhoneNumber)
    @Html.EditorFor(a => a.PublicPhoneNumber)
    @Html.EditorFor(a => a.Image)
    <div class="input-group input-group-outline mb-2">


        <label asp-for="@Model.LessonId">درس</label>
        <select class="form-control" asp-for="@Model.LessonId">
            <option value="@null">انتخاب کنید</option>
            @foreach (var item in ViewData["Lessons"] as List<Lesson>)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <input value="بروزرسانی" type="submit" class="btn btn-success" />
</form>
