@{
}
@model UpdateUserModel

<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">@ViewData["header_title"]</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All"></div>

                        @Html.EditorFor(a=>a.UserName,"String")
                        <div class="input-group input-group-outline mb-3 " name="form">
                            <label asp-for="@Model.Number" style="z-index:6000;" class="form-label">آمار</label>
                            <input asp-for="@Model.Number" style="z-index:5500;" class="form-control">
                        </div>
                        @Html.EditorFor(a=>a.FirstName)
                        @Html.EditorFor(a=>a.LastName)
                        @Html.EditorFor(a=>a.PhoneNumber,"PhoneNumber")
                        @Html.EditorFor(a=>a.Password,"String")
                        @Html.EditorFor(a=>a.RepetitionPassword, "String")
                        <div class="input-group input-group-outline">
                            <label asp-for="UserRole">نوع:</label><br />
                            <select class="form-control" asp-for="UserRole">
                                <option value="">انتخاب کنید</option>

                                <option value="ادمین">ادمین</option>
                                <option value="دانش_آموز">دانش آموز</option>
                                <option value="کلاس">کلاس</option>

                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">@ViewData["submit_title"]</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                    <p class="mb-2 text-sm mx-auto">
                        از قبل حساب داری؟
                        <a asp-action="Login" class="text-primary text-gradient font-weight-bold">ورود</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
