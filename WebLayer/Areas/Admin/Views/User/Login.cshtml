@{
}
@model LoginModel

<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">ورود</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" class="text-start">
                        <div asp-validation-summary="All"></div>
                        @Html.EditorFor(a=>a.UserName)
                        @Html.EditorFor(a=>a.Password, "String")
                        <div dir="ltr" class="right">

                        @Html.EditorFor(a=>a.RemmeberMy)
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">ورود</button>
                        </div>
                        <p class="mt-4 text-sm text-center">
                            حساب کاربردی ندارید؟
                            <a asp-action="SignUp" class="text-primary text-gradient font-weight-bold">ثبت نام</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>